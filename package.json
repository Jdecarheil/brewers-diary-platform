{
  "name": "brewersdiaryweb",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "test:unit": "vitest --no-watch",
    "test:integration": "vitest",
    "tw-watch": "tailwindcss -i ./src/styles/input.css -o ./src/output.css --watch",
    "build": "tsc -b && vite build",
    "husky": "node ./node_modules/husky/bin.js",
    "lint": "eslint .",
    "prepare": "husky install",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "lint-staged": {
    "src/**/*.(ts|tsx|js|jsx)": [
      "prettier --write"
    ],
    "src/**/*.(json|css|scss|md)|.(babelrc|prettierrc|eslint.js|tsconfig.json)": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.1",
    "@nhost/react": "~3.8.0",
    "@preact/signals-react": "~2.2.0",
    "@radix-ui/react-dialog": "~1.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-separator": "~1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tooltip": "~1.1.4",
    "@tanstack/react-query": "~5.62.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.465.0",
    "path": "~0.12.7",
    "react": "~18.3.1",
    "react-dom": "~18.3.1",
    "react-error-boundary": "~4.1.2",
    "react-hook-form": "^7.53.2",
    "react-router-dom": "~6.23.0",
    "sharp": "~0.33.5",
    "svgo": "~3.3.2",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "vite-plugin-image-optimizer": "~1.1.8",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.2",
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.16.0",
    "@preact/signals-react-transform": "^0.4.0",
    "@storybook/addon-essentials": "^8.4.6",
    "@storybook/addon-interactions": "^8.4.6",
    "@storybook/addon-onboarding": "^8.4.6",
    "@storybook/blocks": "^8.4.6",
    "@storybook/react": "^8.4.6",
    "@storybook/react-vite": "^8.4.6",
    "@storybook/test": "^8.4.6",
    "@testing-library/dom": "^10.4.0",
    "@types/node": "^22.10.1",
    "@types/react": "~18.2.19",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "@vitejs/plugin-react": "^4.3.4",
    "dotenv": "^16.4.5",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "eslint-plugin-storybook": "^0.11.1",
    "globals": "^15.13.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.1",
    "storybook": "^8.4.6",
    "tailwindcss": "^3.4.15",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.16.0",
    "vite": "^6.0.1",
    "vite-tsconfig-paths": "^5.1.3",
    "vitest": "^2.1.6"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
